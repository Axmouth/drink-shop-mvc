@model OrderDetailsViewModel

<div class="row">
    <div class="col-md-3 ">
        <div class="list-group ">
            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="Profile">My Profile</a>
            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="Settings">Account Settings</a>
            <a class="list-group-item list-group-item-action active" asp-controller="Account" asp-action="Orders">My Orders</a>


        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Order @Model.Order.OrderId</h4>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a asp-controller="Account" asp-action="Orders">< Back to your Orders List</a>
                        <hr />

                        <table class="table table-bordered table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Selected amount</th>
                                    <th>Drink</th>
                                    <th class="text-right">Price</th>
                                    <th class="text-right">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.Order.OrderLines)
                                {
                                    <tr>
                                        <td class="text-center">@line.Amount</td>
                                        <td class="text-left"><a asp-controller="Drink" asp-action="Details" asp-route-drinkId="@line.Drink.DrinkId">@line.Drink.Name</a></td>
                                        <td class="text-right">@line.Price.ToString("c")</td>
                                        <td class="text-right">
                                            @((line.Amount * line.Drink.Price).ToString("c"))
                                        </td>
                                    </tr>
                                 }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-right">Total:</td>
                                    <td class="text-right">
                                        @Model.Order.OrderTotal.ToString("c")
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                        <br />


                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Order Id:</b><span class="pull-right">@Model.Order.OrderId</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Ordered at:</b><span class="pull-right">@Model.Order.OrderPlaced</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Ordered Items:</b><span class="pull-right">@Model.Order.OrderLines.Count</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Address:</b><span class="pull-right">@Model.Order.AddressLine1</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>City:</b><span class="pull-right">@Model.Order.City</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Zipcode:</b><span class="pull-right">@Model.Order.ZipCode</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Country:</b><span class="pull-right">@Model.Order.Country</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>State:</b><span class="pull-right">@Model.Order.State</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Email:</b><span class="pull-right">@Model.Order.Email</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>First Name:</b><span class="pull-right">@Model.Order.FirstName</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Last Name:</b><span class="pull-right">@Model.Order.LastName</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Phone Number:</b><span class="pull-right">@Model.Order.PhoneNumber</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <b>Subtotal</b>:<span>@Model.Order.OrderTotal.ToString("c")</span>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>