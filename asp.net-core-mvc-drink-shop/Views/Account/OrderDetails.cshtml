@model OrderDetailsViewModel

<div class="row">
    <div class="col-md-3 ">
        <div class="list-group ">
            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="Profile">My Profile</a>
            <a class="list-group-item list-group-item-action" asp-controller="Account" asp-action="Settings">Account Settings</a>
            <a class="list-group-item list-group-item-action active" asp-controller="Account" asp-action="Orders">My Orders</a>


        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Order @Model.Order.OrderId</h4>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h1>WIP</h1>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>