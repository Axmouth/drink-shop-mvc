<li class="nav-item dropdown">
    <a asp-controller="Drink" asp-action="List" class="nav-link dropdown-toggle @(Context.Request.Path.Value.ToLower().StartsWith("/drink") ? "active " : "" )" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Drinks
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
        @foreach (var category in Model)
        {
            <a class="dropdown-item @(Context.Request.Path.Value.ToLower().StartsWith("/drink/list/" + category.CategoryName.ToLower()) ? "active " : "" )" asp-controller="Drink" asp-action="List"
               asp-route-categoryName="@category.CategoryName">@category.CategoryName</a>
        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item @(Context.Request.Path.Value.ToLower().Equals("/drink") || Context.Request.Path.Value.ToLower().Equals("/drink/") ? "active " : "" )" asp-controller="Drink" asp-action="List" asp-route-categoryName="">View all drinks</a>
    </div>
</li>