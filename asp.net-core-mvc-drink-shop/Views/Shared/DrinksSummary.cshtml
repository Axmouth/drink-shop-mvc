@model Drink

<div class="col-sm-4 col-lg-4 col-md-4 thumbnail">
    <img src="@Model.ImageThumbnailUrl" alt="" class="" loading="lazy"/>
    <div class="caption">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>
            <a asp-controller="Drink" asp-action="Details" asp-route-drinkId="@Model.DrinkId">@Model.Name</a>
        </h3>
        <p>@Model.ShortDescription</p>
    </div>
    <div class="add-to-cart text-right">
        <p class="button">
            <a class="btn btn-success" id="cart-button"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-drinkId="@Model.DrinkId">
                Add to Cart
            </a>
        </p>
    </div>
</div>