@model Drink

<div class="col-sm-4 col-lg-4 col-md-4">
    <img src="@Model.ImageThumbnailUrl" alt="" />
    <div class="caption">
        <h3 class="pull-right">@Model.Price.ToString("c", System.Globalization.CultureInfo.CurrentCulture)</h3>
        <h3>
            <a class="drink-title">@Model.Name</a>
        </h3>
        <p>@Model.ShortDescription</p>
    </div>
    <div class="addToCart text-right">
        <p class="button">
            <a class="btn btn-success" id="cart-button"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-drinkId="@Model.DrinkId">
                Add to Cart
            </a>
        </p>
    </div>
</div>